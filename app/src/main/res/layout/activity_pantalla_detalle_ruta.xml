<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <TextView
        android:id="@+id/lblDescripcionRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/descripcion"
        android:textColor="@color/color_texto"
        app:layout_constraintBottom_toTopOf="@+id/lblDistanciaRuta"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <TextView
        android:id="@+id/lblDistanciaRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/distancia"
        android:textColor="@color/color_texto"
        app:layout_constraintBottom_toTopOf="@+id/lblDificultadRuta"
        app:layout_constraintEnd_toEndOf="@+id/lblDescripcionRuta"
        app:layout_constraintStart_toStartOf="@+id/lblDescripcionRuta"
        app:layout_constraintTop_toBottomOf="@+id/lblDescripcionRuta" />

    <TextView
        android:id="@+id/lblDificultadRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/dificultad"
        android:textColor="@color/color_texto"
        app:layout_constraintBottom_toTopOf="@+id/lblDuracionRuta"
        app:layout_constraintEnd_toEndOf="@+id/lblDistanciaRuta"
        app:layout_constraintStart_toStartOf="@+id/lblDistanciaRuta"
        app:layout_constraintTop_toBottomOf="@+id/lblDistanciaRuta" />

    <TextView
        android:id="@+id/lblDuracionRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/duracion"
        android:textColor="@color/color_texto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lblDificultadRuta"
        app:layout_constraintStart_toStartOf="@+id/lblDificultadRuta"
        app:layout_constraintTop_toBottomOf="@+id/lblDificultadRuta" />

    <TextView
        android:id="@+id/txtDescripcionRuta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/fondo_aplicacion_oscuro"
        android:backgroundTint="@color/fondo_aplicacion_oscuro"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtDistanciaRuta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <TextView
        android:id="@+id/txtDistanciaRuta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/fondo_aplicacion_oscuro"
        android:backgroundTint="@color/fondo_aplicacion_oscuro"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtDificultadRuta"
        app:layout_constraintEnd_toEndOf="@+id/txtDescripcionRuta"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/txtDescripcionRuta" />

    <TextView
        android:id="@+id/txtDificultadRuta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/fondo_aplicacion_oscuro"
        android:backgroundTint="@color/fondo_aplicacion_oscuro"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtDuracionRuta"
        app:layout_constraintEnd_toEndOf="@+id/txtDistanciaRuta"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/txtDistanciaRuta" />

    <TextView
        android:id="@+id/txtDuracionRuta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/fondo_aplicacion_oscuro"
        android:backgroundTint="@color/fondo_aplicacion_oscuro"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtDificultadRuta"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/txtDificultadRuta" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="219dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_0804389_4569589" />

</androidx.constraintlayout.widget.ConstraintLayout>