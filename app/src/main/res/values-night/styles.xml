<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema para AlertDialog -->
    <style name="MyAlertDialogTheme" parent="Theme.Material3.Dark.Dialog.Alert">
        <!-- Fondo del diálogo -->
        <item name="android:background">@color/azul_oscuro</item>
        <!-- Color del texto principal (título, mensaje) -->
        <item name="android:textColorPrimary">@color/color_texto</item>
        <!-- Estilo del texto (opcional, para títulos y botones) -->
        <item name="android:textAppearance">@style/MyDialogTextAppearance</item>
        <!-- Personalización de los botones -->
        <item name="android:textAppearanceButton">@style/botonDialogoStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/botonDialogoStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/botonDialogoStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/botonDialogoStyle</item>
    </style>
    <style name="botonDialogoStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Estilo del texto en AlertDialog -->
    <style name="MyDialogTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/color_texto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:iconTint">@color/white</item>
    </style>

    <!-- Estilo personalizado para botones -->
    <style name="MyButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:iconTint">@style/MyTextAppearance</item>
        <item name="android:background"></item>"
        <item name="android:backgroundTint">@color/color_texto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:icon">@style/MyTextAppearance</item>
    </style>
    <style name="spinnerStyle" parent="Widget.AppCompat.TextView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:popupBackground">@color/fondo_aplicacion_oscuro</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonCornerRadius">20dp</item>
        <item name="android:background"></item>
    </style>
    <style name="MyTextAppearance" parent="Widget.Material3.Button.Icon">
        <item name="android:textColor">@color/white</item>
        <item name="android:iconTint">@color/white</item>
    </style>
    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

</resources>
